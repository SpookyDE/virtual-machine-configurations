Vagrant.configure("2") do |config|
  # --- Basis-Image ---
  config.vm.box = "ubuntu/jammy64"  # Ubuntu 22.04 LTS

  # --- Netzwerk: eigene LAN-IP ---
  config.vm.network "public_network", ip: "192.168.2.50"

  # --- Hostname ---
  config.vm.hostname = "pihole-vm"

  # --- Ressourcen ---
  config.vm.provider "virtualbox" do |vb|
    vb.name = "PiHole-VM"
    vb.memory = 1024
    vb.cpus = 1
  end

  config.vm.provision "shell", path: "scripts/install_docker.sh", privileged: true, name: "docker"
  config.vm.provision "shell", path: "scripts/setup_pihole.sh", privileged: true, name:"pihole"
end